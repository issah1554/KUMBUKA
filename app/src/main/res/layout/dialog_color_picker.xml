<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center">

    <!-- Main Kumbuka Cyan -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/color_primary"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        android:backgroundTint="@color/kumbuka_primary"
        android:clickable="true"
        android:focusable="true" />

    <!-- Accent Cyan -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/color_accent"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        android:backgroundTint="@color/kumbuka_accent"
        android:clickable="true"
        android:focusable="true" />

    <!-- Dark Cyan -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/color_dark"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        android:backgroundTint="@color/kumbuka_primary_dark"
        android:clickable="true"
        android:focusable="true" />

    <!-- Complementary Indigo -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/color_indigo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        android:backgroundTint="#3F51B5"
        android:clickable="true"
        android:focusable="true" />
</LinearLayout>
