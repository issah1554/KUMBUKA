<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@color/divider"
        android:showDividers="middle">

        <!-- GENERAL SECTION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <include layout="@layout/item_menu" android:id="@+id/about_us"
            android:tag="About Us" android:drawableLeft="@drawable/ic_info" />

        <include layout="@layout/item_menu" android:id="@+id/contact"
            android:tag="Contact Us" android:drawableLeft="@drawable/ic_mail" />

        <!-- ACCOUNT SECTION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:paddingTop="24dp"
            android:paddingBottom="8dp" />

        <include layout="@layout/item_menu" android:id="@+id/account_settings"
            android:tag="Account Settings" android:drawableLeft="@drawable/ic_account_circle" />

        <include layout="@layout/item_menu" android:id="@+id/app_settings"
            android:tag="App Settings" android:drawableLeft="@drawable/ic_settings" />

        <!-- SUPPORT SECTION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Support"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:paddingTop="24dp"
            android:paddingBottom="8dp" />

        <include layout="@layout/item_menu" android:id="@+id/privacy_policy"
            android:tag="Privacy Policy" android:drawableLeft="@drawable/ic_shield" />

        <include layout="@layout/item_menu" android:id="@+id/complaints"
            android:tag="Complaints" android:drawableLeft="@drawable/ic_warning" />

        <include layout="@layout/item_menu" android:id="@+id/help"
            android:tag="Help" android:drawableLeft="@drawable/ic_support_agent" />

        <include layout="@layout/item_menu" android:id="@+id/report"
            android:tag="Report" android:drawableLeft="@drawable/ic_report" />

        <include layout="@layout/item_menu" android:id="@+id/receipt"
            android:tag="Receipt" android:drawableLeft="@drawable/ic_receipt" />

    </LinearLayout>
</ScrollView>
